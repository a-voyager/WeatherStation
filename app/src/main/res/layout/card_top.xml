<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="200dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7c8eec"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tt_window_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="26℃"
            android:textColor="#e6e2e2"
            android:textSize="26sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tt_window_weather_stat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="晴"
                android:textColor="#e6e2e2"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tt_window_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.77"
                android:gravity="start"
                android:text="新都大道 四川 成都"
                android:textColor="#e6e2e2"
                android:textSize="16dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <LinearLayout
                android:id="@+id/ll_window_air_quality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tt_window_air_quality"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end|bottom"
                        android:text="79//42"
                        android:textColor="#e6e2e2"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.88"
                        android:gravity="start|bottom"
                        android:text="PM2.5"
                        android:textColor="#e6e2e2"
                        android:textSize="12dp"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/tt_window_air_stat"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top|center"
                    android:text="轻度污染"
                    android:textColor="#e6e2e2"
                    android:textSize="14dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_window_air_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tt_window_air_temp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.38"
                        android:gravity="end|bottom"
                        android:text="29//20"
                        android:textColor="#e6e2e2"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|bottom"
                        android:text="℃"
                        android:textColor="#e6e2e2"
                        android:textSize="12dp"/>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top|center"
                    android:text="温度"
                    android:textColor="#e6e2e2"
                    android:textSize="14dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_window_air_hump"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tt_window_air_hump"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.56"
                        android:gravity="end|bottom"
                        android:text="79//42"
                        android:textColor="#e6e2e2"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|bottom"
                        android:text="RH"
                        android:textColor="#e6e2e2"
                        android:textSize="12dp"/>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top|center"
                    android:text="湿度"
                    android:textColor="#e6e2e2"
                    android:textSize="14dp"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>